  hs-source-dirs:
      src
  build-depends:
      base >=4.7 && <5
      , aeson
      , bytestring
      , blaze-html
      , blaze-builder
      , cookie
      , scotty
      , mtl
      , postgresql-simple
      , text
      , time
      , unliftio-core
      , vector
      , wai
      , wai-extra
      , wai-middleware-static
      , warp
     
  default-language: Haskell2010
  ghc-options: -Wall
  default-extensions: OverloadedStrings
                      BangPatterns


