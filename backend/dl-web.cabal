executable dl-web
  hs-source-dirs:      app
  main-is:             Main.hs
  default-language:    Haskell2010
  build-depends:       base >= 4.7 && < 5
                      , dl-web
  ghc-options:        -Wall -threaded -rtsopts -with-rtsopts=-N

library
  exposed-modules:
      Lib
      Cookie
      DB
      Model
      View
